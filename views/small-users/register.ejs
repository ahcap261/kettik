<!-- include header -->
<%- include('header2') %>
<!-- /include header -->

<link href="/static/add_us/style.css" rel="stylesheet">

<!-- Main Site -->
<main id="site-main">
  <form method="POST" onsubmit="return doRegister(this);">
    <div class="new_user">
      <div class="form-title text-center">
        <h2 class="mb-2 font-weight-600">Use the form below to register</h2>
      </div>
      <div class="form-group">
        <label for="name" class="mb-2 font-weight-600">Name</label>
        <input type="text" name="userName" value="" required>
      </div>
      <div class="form-group">
        <label for="email" class="mb-2 font-weight-600">Email</label>
        <input type="email" name="email" value="" placeholder="example@gmail.com" required>
      </div>
      <div class="form-group">
        <label for="password" class="mb-2 font-weight-600">Password</label>
        <input type="password" id="password" value="" name="password" required>
      </div>
      <div class="form-group">
        <label for="age" class="mb-2 font-weight-600">Age</label>
        <input type="number" id="age" value="" name="age" required>
      </div>
      <div class="form-group">
        <label for="city" class="mb-2 font-weight-600">City</label>
        <input type="text" id="city" value="" name="city" required>
      </div>
      <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="reset" class="btn btn-primary">Reset</button>
      </div>
      <div class="text-center">
        <p class="mb-2 font-weight-600">Already have an account? <a href="/login">Login</a></p>
      </div>
    </div>
  </form>

  <script>
    function doRegister(form) {
      $.ajax({
        url: '/register',
        method: 'POST',
        data: {
          userName: form.userName.value,
          email: form.email.value,
          password: form.password.value,
          age: form.age.value,
          city: form.city.value
        },
        success: function (response) {
          alert(response);
        }
      });
      return false;
    }
  </script>
</main>

<!-- include footer -->
<%- include('footer2') %>
<!-- /include footer -->
